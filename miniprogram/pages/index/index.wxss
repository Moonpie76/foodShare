@font-face {
    font-family: 'iconfont';
    /* Project id 2525554 */
    src: url('//at.alicdn.com/t/font_2525554_c9e4z0ixhm4.woff2?t=1620047771974') format('woff2'),
        url('//at.alicdn.com/t/font_2525554_c9e4z0ixhm4.woff?t=1620047771974') format('woff'),
        url('//at.alicdn.com/t/font_2525554_c9e4z0ixhm4.ttf?t=1620047771974') format('truetype');
}

.father{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

.top_lead {
    display: flex;
    justify-content: center;
    flex-direction: row;
    align-items: center;
    margin-top: 10rpx;
    width: 95%;
    height: 70rpx;
    background-color: white;
}

.locate {
    display: flex;
    width: 30%;
    height: 100%;
    margin-right: 10rpx;
    align-items: center;
    flex-direction: row;
    justify-content: center;
}

.locate_icon {
    display: flex;
    width: 15%;
    height: 100%;
    font-family: "iconfont";
    font-size: 60rpx;
    font-style: normal;
    justify-content: center;
    color: rgb(255, 60, 0);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.icon-locate:before {
    content: '\e60d';
}

.locate_text {
    display: flex;
    width: 85%;
    height: 100%;
    margin-bottom: 45rpx;
    align-items: center;
    margin-left: 10rpx;
}

.text {
    width: 150rpx;
    display: -webkit-box;
    font-size: 30rpx;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    white-space: nowrap;
}

.search {
    display: flex;
    width: 70%;
    height: 100%;
    justify-content: center;
    align-items: center;
}

.search_bar{
    display: flex;
    align-items: center;
    width: 100%;
    height: 85%;
    background-color: whitesmoke;
    border-radius: 18rpx;
}

.search_icon{
    margin-left: 20rpx;
}

.search_input{
    margin-left: 10rpx;
    height: 28px;
    line-height: 28px;
    font-size: 12px;
}

.search_button{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 10rpx;
    height: 100%;
    background-color: violet;
}

.note {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1%;
    width: 98%;
    height: 100%;
}