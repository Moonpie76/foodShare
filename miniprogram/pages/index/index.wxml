<import src="../templete/note.wxml" />
<view class="father">
    <view class="top_lead">
        <view class="locate">
            <icon class="locate_icon .icon-locate"></icon>
            <view class="locate_text">
                <text class="text">
                    获取定位后填在这里
                </text>
            </view>
        </view>
        <view class="search">
            <view class="search_bar">
                <icon class="search_icon" type="search" size="14"></icon>
                <input type="text" class="search_input" placeholder="请输入搜索内容" confirm-type="search" />
            </view>
        </view>
    </view>
    <view class="divLine"></view>
    <view class="notes">
        <view class="left">
            <block wx:for="{{noramalData}}" wx:key="index" wx:for-item="item_note">
                <template is="{{msg}}" data="{{item_note}}" wx:if="{{index%2==0}}"></template>
            </block>
        </view>
        <view class="right">
            <block wx:for="{{noramalData}}" wx:key="index" wx:for-item="item_note">
                <template is="{{msg}}" data="{{item_note}}" wx:if="{{index%2==1}}"></template>
            </block>
        </view>
    </view>
</view>